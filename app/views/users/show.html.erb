<h3>Username: </h3>
<%= @user.username %>
<h1><%= @user.email %></h1>
<h1><%= @user.name %></h1>
<%= user_avatar(@user) %><br>
<% if @user.id == current_user.id %>
  <%= link_to 'Edit Information', edit_user_path %> <%= link_to 'Delete Account', user_path(current_user), method: :delete, data: { confirm: "You sure?" }%>
<% end %>
