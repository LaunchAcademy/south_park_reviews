<h2>Edit <%= @user.username %></h2>

<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, input_html: {size: 40} %>
    <%= f.input :username, required: true, input_html: {size: 40} %>
    <%= f.input :name, input_html: {size: 40} %>
    <%= f.input :avatar_url, autofocus: true, input_html: {size: 40} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Confirm" %>
  </div>
<% end %>

<%= link_to 'Back', :back %>
