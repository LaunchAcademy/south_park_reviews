<% provide(:title, 'Sign In') %>

<div class="form-wrapper">
  <h2>Sign in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :login, required: false, autofocus: true, input_html: {size: 40} %>
      <%= f.input :password, required: false, input_html: {size: 40} %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign in" %>
    </div>
  <% end %>

  <hr>
  <p>Sign up below if you are not registered:</p>
  <%= link_to 'Sign up', new_user_registration_path, class: "button"%><br>
  <%= link_to 'Back', :back, class: "button secondary" %>
</div>
