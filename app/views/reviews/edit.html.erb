<% provide(:title, 'Edit Review') %>

<h1>Edit Your Review</h1>
<%= simple_form_for([@episode, @review]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :body, required: true, as: :text, autofocus: true, label: "Edit your review below:", input_html: { rows: 10 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit" %>
  </div>
<% end %>

<%= link_to 'Back', episode_path(@episode), class: "button secondary"%>
